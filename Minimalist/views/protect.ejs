<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Protected Page</title>
</head>
<body>
  <h1>Protected Page</h1>
  <div id="content">Loading protected content...</div>

  <script>
    // Fetch protected data using JWT or session cookie
    async function loadProtected() {
      const headers = {};
    
      if (window.authMode === 'jwt') {
        if (!window.accessToken) {
          window.location.replace('/login');
          return;
        }

        headers['Authorization'] = 'Bearer ' + window.accessToken;
      }

      const res = await fetch('/protected-data', {
            headers: {
                'Authorization': 'Bearer ' + window.accessToken
            }
        });

      if (res.status === 401) {
        alert('Not authenticated or session expired');
        window.accessToken = null;
        window.location.replace('/login');
        return;
      }

      const data = await res.json();
      document.getElementById('content').innerText =
        `Hello ${data.username} (${data.authType})`;
    }

    loadProtected();
  </script>
</body>
</html>